<Window x:Class="test.Memo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test"
        mc:Ignorable="d"
        Title="Memo" Height="200" Width="600">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="24" Width="470" VerticalAlignment="Center" Text="Внимательно читайте задание. Время на выполнение - 20 минут. Перед отправкой на проверку, проверьте выбранные варианты. Желаем удачи при выполнении теста." TextWrapping="Wrap"></TextBlock>
            <Image Margin="20,0,0,0" Source="img/голос.png" Width="70" Height="70"></Image>
        </StackPanel>
    </Grid>
</Window>
